generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Pets {
  id String @id @default(auto()) @map("_id") @db.ObjectId
   name    String
    type    String?
    image   String?
    logo    String?
    status  Boolean? @default(false)
    owner   User?    @relation(fields: [ownerId], references: [id])
    ownerId String?
}

model User {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  age    BigInt?
  avatar String?
  city   String
  email  String  @unique
  name   String
  status Boolean
  pets  Pets[]
}
